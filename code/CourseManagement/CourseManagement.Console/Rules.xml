<?xml version="1.0" encoding="utf-8" ?>
<rules>
  <rule name="NewStudent">
    <actions>
      <action name="NewStudent"/>
    </actions>
  </rule>
  <rule name="NewGroup">
    <actions>
      <action name="AddGroup"/>
    </actions>
  </rule>
  <rule name="AddDeliverable">
    <actions>
      <action name="AddDeliverable"/>
    </actions>
  </rule>
  <rule name="AddPublicTicket">
    <actions>
      <action name="AddTicket" public="true"/>
    </actions>
  </rule>
  <rule name="AddPrivateTicket">
    <actions>
      <action name="AddTicket" public="false"/>
    </actions>
  </rule>
  <rule name="TicketReply">
    <actions>
      <action name="RelateTicketToReply"/>
      <action name="DownloadReplyAttachments"/>
    </actions>
  </rule>
  <rule name="Fallback">
    <actions>
      <action name="EmailReplyAction"
              body="An e-mail you sent did not match any of the configured rules." 
              public="false" 
              subject="Error processing e-mail"/>
    </actions>
  </rule>
</rules>