@using CourseManagement.Web.Helpers
@model CourseManagement.Model.Ticket

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Ticket</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.MessageSubject)
        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherId, "Assigned Teacher")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TeacherId", String.Empty)
            @Html.ValidationMessageFor(model => model.TeacherId)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
